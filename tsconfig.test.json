{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "dist-tests",
    "noEmit": false,
    "declaration": false,
    "sourceMap": false,
    "types": ["node"],
    "module": "ESNext",
    "target": "ES2020",
    "allowImportingTsExtensions": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/lib/supabaseClient": ["./src/lib/api/__testutils__/supabaseClientStub.ts"]
    }
  },
  "include": [
    "src/lib/api/**/*.ts",
    "src/lib/types/**/*.ts",
    "src/types/**/*.ts"
  ]
}
